<div id="leftMenu"
class="bg-white shadow-lg flex flex-col px-4 py-3 h-screen w-[300px] fixed top-0 left-0 hidden
transition-all duration-200 z-10">

    <!-- close button -->
    <div class="absolute top-3 right-3">
        <button id="closeBtn" class="text-2xl">&times;</button>
    </div>

    <div>
        <span class="font-bold text-xl">Dashboard</span>
        <!-- line -->
        <div class="h-0.5 bg-gray-300 my-4"></div>
        <% let activeColor = 'text-[#1973E7]'; %>
        <div class="flex flex-col gap-2">
            <a href="/dashboard">
                <div class="font-semibold <% if(active=='dashboard') { %> <%=activeColor %> <%}%> text-md hover:text-[#1973E7]">Home</div>
            </a>
            <a href="/department">
                <div class="font-semibold <% if(active=='department') { %> <%=activeColor %> <%}%> text-md hover:text-[#1973E7]">Department Tickets</div>
            </a>
            <a href="/tickets">
                <div class="font-semibold <% if(active=='ticket') { %> <%=activeColor %> <%}%> text-md hover:text-[#1973E7]">My Tickets</div>
            </a>
            <a href="/raiseTicket">
                <div class="font-semibold <% if(active=='raiseTicket') { %> <%=activeColor %> <%}%> text-md hover:text-[#1973E7]">Raise Ticket</div>
            </a>
        </div>
    </div>

    <div class="absolute bottom-5">
        <a href="/logout"
        class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
        Logout</a>
    </div>
</div>